@model HealthMonitorapp.Models.PatientData

@{
    ViewData["Title"] = "Create Patient Data";
}

<h2>@ViewData["Title"]</h2>

<h4>PatientData</h4>
<hr />

@using (Html.BeginForm("Create", "PatientData", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.PatientId)
        @Html.EditorFor(model => model.PatientId)
        @Html.ValidationMessageFor(model => model.PatientId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Timestamp)
        @Html.EditorFor(model => model.Timestamp)
        @Html.ValidationMessageFor(model => model.Timestamp)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HeartRate)
        @Html.EditorFor(model => model.HeartRate)
        @Html.ValidationMessageFor(model => model.HeartRate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OxygenLevel)
        @Html.EditorFor(model => model.OxygenLevel)
        @Html.ValidationMessageFor(model => model.OxygenLevel)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Alert)
        @Html.EditorFor(model => model.Alert)
        @Html.ValidationMessageFor(model => model.Alert)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}


