@model IEnumerable<HealthMonitorapp.Models.RiskAssessment>

@{
    ViewData["Title"] = "Risk Assessment";
}

<h1>Risk Assessment</h1>

<!-- Form to create a new Risk Assessment -->
<h2>Create a New Assessment</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Patient ID:</label>
        <input type="number" name="patientId" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Heart Rate:</label>
        <input type="number" name="heartRate" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Oxygen Level:</label>
        <input type="number" name="oxygenLevel" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Assessment</button>
</form>

<hr />

<!-- Display list of existing assessments -->
<h2>Existing Assessments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Timestamp</th>
            <th>Heart Rate</th>
            <th>Oxygen Level</th>
            <th>Risk Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assessment in Model)
        {
            <tr>
                <td>@assessment.PatientId</td>
                <td>@assessment.Timestamp</td>
                <td>@assessment.HeartRate</td>
                <td>@assessment.OxygenLevel</td>
                <td>@assessment.RiskStatus</td>
            </tr>
        }
    </tbody>
</table>
